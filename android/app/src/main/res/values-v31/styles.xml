<?xml version="1.0" encoding="utf-8"?>
<resources>
  <!-- Android 12+ usa a Splash Screen API e mostra o ícone do launcher por padrão.
       Aqui definimos nosso logo e fundo preto para a splash. -->
  <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
    <item name="android:windowSplashScreenBackground">@color/splashscreen_background</item>
    <item name="android:windowSplashScreenAnimatedIcon">@drawable/logo</item>
    <item name="postSplashScreenTheme">@style/AppTheme</item>
  </style>
</resources>
